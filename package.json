{
  "name": "d3plus-color",
  "version": "0.2.3",
  "description": "Color functions that extent the ability of d3-color.",
  "main": "build/d3plus-color.js",
  "jsnext:main": "index",
  "license": "MIT",
  "homepage": "http://www.d3plus.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/d3plus/d3plus-color.git"
  },
  "keywords": [
    "color",
    "d3",
    "d3plus",
    "data",
    "visualization"
  ],
  "author": {
    "name": "Dave Landry",
    "email": "landry.dave@gmail.com",
    "url": "http://www.dave-landry.com"
  },
  "dependencies": {
    "d3-color": "^0.3.3",
    "d3-scale": "^0.5.1"
  },
  "devDependencies": {
    "eslint": "^1.10.3",
    "faucet": "0.0.1",
    "jsdoc-to-markdown": "^1.3.3",
    "node-static": "^0.7.7",
    "nodemon": "^1.8.1",
    "rollup": "^0.24.1",
    "rollup-plugin-json": "^2.0.0",
    "tape": "^4.4.0"
  },
  "scripts": {
    "pretest": "mkdir -p build && rollup -c",
    "dev": "npm run serve & nodemon --watch src/ -x \"npm run pretest\"",
    "docs": "jsdoc2md 'src/**/*.js' -t README.hbs > README.md",
    "prepublish": "npm test && npm run docs && uglifyjs build/d3plus-color.js -c -m -o build/d3plus-color.min.js && rm -f build/d3plus-color.zip && zip -j build/d3plus-color.zip -- LICENSE README.md build/d3plus-color.js build/d3plus-color.min.js",
    "serve": "static -p 4000",
    "test": "eslint src/* test/unit/*.js && faucet ./test/unit/*.js"
  }
}
