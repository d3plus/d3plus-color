{
  "name": "d3plus-color",
  "version": "0.1.0",
  "description": "Color functions that extent the ability of d3-color.",
  "main": "src/color.js",
  "license": "MIT",
  "homepage": "http://www.d3plus.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/d3plus/d3plus-color.git"
  },
  "keywords": [
    "color",
    "d3",
    "d3plus",
    "data",
    "visualization"
  ],
  "author": {
    "name": "Dave Landry",
    "email": "landry.dave@gmail.com",
    "url": "http://www.dave-landry.com"
  },
  "dependencies": {
    "babelify": "^6.1.3",
    "d3-arrays": "0.0.4",
    "d3-color": "^0.2.4",
    "d3-scale": "^0.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.26",
    "browserify": "^11.0.0",
    "eslint": "^0.24.1",
    "livereloadify": "^2.0.0",
    "mocha": "^2.2.5",
    "mocha-traceur": "^2.1.0",
    "node-static": "^0.7.7",
    "uglifyify": "^3.0.1",
    "watchify": "^3.3.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "browserify": "browserify src/color.js > build/d3plus-color.js & browserify -g uglifyify src/color.js > build/d3plus-color-min.js",
    "lint": "eslint src/* test/mocha/*",
    "mocha": "mocha --recursive --compilers js:mocha-traceur test/mocha",
    "test": "npm run lint && npm run mocha",
    "start": "npm run watchify & livereloadify / & static -p 4000",
    "watchify": "watchify --debug -r ./src/color.js:d3plus-color -o build/d3plus-color-dev.js -v"
  }
}
